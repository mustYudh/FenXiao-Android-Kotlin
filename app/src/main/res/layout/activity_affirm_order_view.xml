<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_white_radius_8"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_order_location"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="64dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/text_null"
                            android:textColor="#ff2d2e39"
                            android:textSize="16sp"
                            />


                        <TextView
                            android:id="@+id/tv_mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:includeFontPadding="false"
                            android:text="@string/text_null"
                            android:textColor="#ffa0a9bb"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="2"
                        android:text="@string/text_null"
                        android:textColor="#ff2d2e39"
                        android:textSize="13sp"
                        />


                </LinearLayout>


                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address_empty"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_white_radius_8"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_order_location"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="64dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="您还未设置收货地址"
                        android:textColor="#FF3539"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:text="请先前往设置"
                        android:textColor="#2D2E39"
                        android:textSize="13sp"
                        />


                </LinearLayout>


                <ImageView
                    android:layout_width="6dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address_ziti"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_white_radius_8"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_order_location"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="64dp"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="您选择了自提商品"
                        android:textColor="#FF3539"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:includeFontPadding="false"
                        android:text="无需设置售后地址，请前往商家处提货"
                        android:textColor="#2D2E39"
                        android:textSize="13sp"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_white_radius_8"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:gravity="center_vertical">


                    <com.yu.common.ui.CircleImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/ic_launcher"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="XXXX小店"
                            android:textColor="#ff000000"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="浙江杭州"
                            android:textColor="#ffa0a9bb"
                            android:textSize="10sp"
                            />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:id="@+id/iv_product"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_placeholder"/>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="@string/text_null"
                            android:textColor="#ff3b3e5a"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/tv_specification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:includeFontPadding="false"
                            android:text="@string/text_null"
                            android:textColor="#ffa2abbc"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:includeFontPadding="false"
                        android:text="购买数量"
                        android:textColor="#ff3c3d5a"
                        android:textSize="13sp"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:orientation="horizontal">

                        <com.yu.common.ui.DelayClickTextView
                            android:id="@+id/tv_jian"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#EBEBEB"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="-"
                            android:textColor="#A0A9BB"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/tv_num"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:background="#EBEBEB"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="1"
                            android:textColor="#3C3D5A"
                            android:textSize="14sp"
                            />

                        <com.yu.common.ui.DelayClickTextView
                            android:id="@+id/tv_add"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="#EBEBEB"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:text="+"
                            android:textColor="#A0A9BB"
                            android:textSize="14sp"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:includeFontPadding="false"
                        android:text="交易方式"
                        android:textColor="#ff3c3d5a"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/tv_dealway"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_weight="1"
                        android:includeFontPadding="false"
                        android:text="配送¥5"
                        android:textColor="#ffa2abbc"
                        android:textSize="13sp"
                        />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_arrow_right"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:includeFontPadding="false"
                        android:text="订单备注"
                        android:textColor="#ff3c3d5a"
                        android:textSize="13sp"
                        />

                    <com.nhbs.fenxiao.module.view.ClearEditText
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="19dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_edittext"
                        android:gravity="center_vertical"
                        android:hint="选填"
                        android:inputType="numberDecimal"
                        android:paddingLeft="9dp"
                        android:textCursorDrawable="@drawable/shape_edittext_cursor"
                        android:textSize="12sp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/tv_num_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="共1件"
                        android:textColor="#ffa2abbc"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:includeFontPadding="false"
                        android:text="小计"
                        android:textColor="#ff444761"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="¥188.00"
                        android:textColor="#FF3539"
                        android:textSize="22sp"
                        />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/lb_cm_white"
        android:gravity="center_vertical|right">

        <TextView
            android:id="@+id/tv_num_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="共1件"
            android:textColor="#ffa2abbc"
            android:textSize="13sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:includeFontPadding="false"
            android:text="小计"
            android:textColor="#ff444761"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_price_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="¥188.00"
            android:textColor="#FF3539"
            android:textSize="22sp"
            />


        <com.yu.common.ui.DelayClickTextView
            android:id="@+id/tv_commit"
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_order_button"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="提交订单"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />
    </LinearLayout>
</FrameLayout>
