<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_all_height"
    android:background="@color/lb_cm_white"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/action_bar_height_top"
    >


  <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginLeft="16dp"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_setting"
      />

  <View
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"/>


  <ImageView
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_black_scan"
      />


  <ImageView
      android:layout_width="22dp"
      android:layout_height="20dp"
      android:layout_marginLeft="18dp"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_black_msg"
      />


  <TextView
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="-7dp"
      android:gravity="center"
      android:paddingLeft="2dp"
      android:paddingRight="2dp"
      android:id="@+id/iv_msg_num"
      android:layout_width="wrap_content"
      android:layout_height="14dp"
      android:layout_marginRight="4dp"
      android:background="@drawable/shape_red_point"
      android:text="99+"
      android:textColor="@color/lb_cm_white"
      android:textSize="10sp"
      android:visibility="visible"
      />
</LinearLayout>


