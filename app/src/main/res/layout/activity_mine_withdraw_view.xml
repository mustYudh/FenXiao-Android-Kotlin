<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_line"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/lb_cm_white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="到账支付宝"
            android:textColor="#ff2d2e39"
            android:textSize="15sp"
            />

        <com.nhbs.fenxiao.module.view.ClearEditText
            android:id="@+id/et_account"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请填写您的提现账号"
            android:inputType="numberDecimal"
            android:paddingLeft="9dp"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="10dp"
            android:src="@drawable/arrow_right"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/shape_edit_divider_line"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/lb_cm_white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="提现金额"
            android:textColor="#ff2d2e39"
            android:textSize="15sp"
            />

        <com.nhbs.fenxiao.module.view.ClearEditText
            android:id="@+id/et_balance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="余额¥21412"
            android:inputType="numberDecimal"
            android:paddingLeft="9dp"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="15sp"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/shape_edit_divider_line"
        android:scaleType="centerCrop"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/lb_cm_white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="提现需支付5%手续费"
        android:textColor="#ffa0a9bb"
        android:textSize="11sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="预计24小时内到账，实际以到账时间为准"
        android:textColor="#ffa0a9bb"
        android:textSize="11sp"
        />


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/tv_withdraw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/shape_login_text"
        android:gravity="center"
        android:text="提现"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        />
</LinearLayout>
