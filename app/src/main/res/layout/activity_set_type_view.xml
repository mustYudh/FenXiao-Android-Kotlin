<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    >

  <LinearLayout
      android:id="@+id/no_set_type"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="未分类"
        android:textColor="#ff2d2e39"
        android:textSize="14sp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:text="111件商品"
        android:textColor="#ffa0a9bb"
        android:textSize="14sp"
        />

    <ImageView
        android:layout_width="6dp"
        android:layout_height="10dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/arrow_right"
        />
  </LinearLayout>

  <android.support.v7.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginTop="8dp"
      android:layout_weight="1"
      tools:listitem="@layout/item_type_layout"
      >

  </android.support.v7.widget.RecyclerView>


  <LinearLayout
      android:id="@+id/add_new_type"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:background="@color/white"
      >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >

      <ImageView
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:src="@drawable/sort_add"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:text="新建分类"
          android:textColor="#ff2d2e39"
          android:textSize="14sp"
          />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:background="#ECECEC"
        />

    <LinearLayout
        android:id="@+id/type_manager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        >

      <ImageView
          android:layout_width="22dp"
          android:layout_height="22dp"
          android:src="@drawable/sort_management"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:text="管理分类"
          android:textColor="#ff2d2e39"
          android:textSize="14sp"
          />
    </LinearLayout>
  </LinearLayout>
</LinearLayout>