<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff7f7f7"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="123dp"
      android:layout_marginLeft="24dp"
      android:layout_marginRight="24dp"
      android:layout_marginTop="16dp"
      android:background="@drawable/ic_withdrawal_bg"
      android:orientation="vertical"
      android:paddingLeft="24dp"
      android:paddingRight="24dp"
      android:paddingTop="13dp"
      >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可用金额"
        android:textColor="#A1FFFFFF"
        android:textSize="11sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <TextView
          android:id="@+id/balance"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:layout_weight="1"
          tools:text="300.00"
          android:textColor="#ffffffff"
          android:textSize="18sp"
          />


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawablePadding="4dp"
          android:drawableRight="@drawable/ic_orange_arrow"
          android:gravity="center"
          android:text="明细"
          android:textColor="#A1FFFFFF"
          android:textSize="11sp"
          />


    </LinearLayout>


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/withdrawal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_white_radius_6"
        android:gravity="center"
        android:text="提现"
        android:textColor="#ff8a1bff"
        android:textSize="16sp"
        />
  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:background="@color/white"
      android:orientation="vertical"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="9dp"
          android:paddingTop="9dp"
          android:text="待结算"
          android:textColor="#ff2d2e39"
          android:textSize="16sp"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="10dp"
          android:paddingLeft="4dp"
          android:paddingTop="13dp"
          android:text="(元)"
          android:textColor="#ffa0a9bb"
          android:textSize="12sp"
          />

      <TextView
          android:id="@+id/settled_amount"
          android:layout_width="0dp"
          android:layout_height="20dp"
          android:layout_weight="1"
          android:gravity="right"
          tools:text="12414114.00"
          android:textColor="#ffff2d48"
          android:textSize="14sp"
          />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingBottom="9dp"
          android:paddingTop="9dp"
          android:text="已提现"
          android:textColor="#ff2d2e39"
          android:textSize="16sp"
          />


      <TextView
          android:id="@+id/drawal_amount"
          android:layout_width="0dp"
          android:layout_height="20dp"
          android:layout_weight="1"
          android:gravity="right"
          tools:text="12414114.00"
          android:textColor="#ffff2d48"
          android:textSize="14sp"
          />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingBottom="9dp"
          android:paddingTop="9dp"
          android:text="保证金"
          android:textColor="#ff2d2e39"
          android:textSize="16sp"
          />


      <com.yu.common.ui.DelayClickImageView
          android:layout_width="6dp"
          android:layout_height="10dp"
          android:layout_gravity="center"
          android:scaleType="centerCrop"
          android:src="@drawable/ic_gary_right_arrow"
          />

    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@color/white"
      android:orientation="vertical"
      >

    <LinearLayout
        android:id="@+id/bind_we_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingBottom="9dp"
          android:paddingTop="9dp"
          android:text="微信"
          android:textColor="#ff2d2e39"
          android:textSize="16sp"
          />


      <com.yu.common.ui.DelayClickTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:drawablePadding="4dp"
          android:drawableRight="@drawable/ic_gary_right_arrow_text"
          android:scaleType="centerCrop"
          android:text="已绑定"
          android:textColor="#ffa0a9bb"
          android:textSize="12sp"
          />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/line_color"
        />


    <LinearLayout
        android:id="@+id/bind_ali_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingBottom="9dp"
          android:paddingTop="9dp"
          android:text="支付宝"
          android:textColor="#ff2d2e39"
          android:textSize="16sp"
          />


      <com.yu.common.ui.DelayClickTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:drawablePadding="4dp"
          android:drawableRight="@drawable/ic_gary_right_arrow_text"
          android:scaleType="centerCrop"
          android:text="未绑定"
          android:textColor="#ffa0a9bb"
          android:textSize="12sp"
          />

    </LinearLayout>


  </LinearLayout>
</LinearLayout>