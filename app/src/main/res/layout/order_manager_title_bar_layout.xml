<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_all_height"
    android:background="#8A1BFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/action_bar_height_top"
    >

  <LinearLayout
      android:id="@+id/action_bar_left_actions"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginLeft="2dp"
      android:gravity="center_vertical|left"
      android:orientation="horizontal"
      >

    <com.yu.common.ui.BarIconContainer
        android:id="@+id/action_back"
        android:layout_width="48dp"
        android:layout_height="@dimen/action_bar_height"
        app:bar_icon="@drawable/ic_white_back"
        />


    <com.yu.common.ui.BarIconContainer
        android:id="@+id/action_close"
        android:layout_width="48dp"
        android:layout_height="@dimen/action_bar_height"
        android:visibility="gone"
        app:bar_icon="@drawable/ic_select_city_close"
        />


  </LinearLayout>


  <LinearLayout
      android:id="@+id/action_bar_center_actions"
      android:layout_width="170dp"
      android:layout_height="28dp"
      android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:orientation="horizontal"
      >

    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/order_manager"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_order_manager"
        android:gravity="center"
        android:text="订单管理"
        android:textColor="@color/order_manager_tab_text_color"
        android:textSize="13sp"
        />


    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/ic_come_assets"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/selector_income_assets"
        android:gravity="center"
        android:text="收入资产"
        android:textColor="@color/order_manager_tab_text_color"
        android:textSize="13sp"
        />

  </LinearLayout>


</RelativeLayout>