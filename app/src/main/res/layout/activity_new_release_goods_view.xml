<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:overScrollMode="never"
      android:scrollbars="none"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

      <include layout="@layout/include_layout_release_goods_top"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:background="@color/lb_cm_white"
          android:orientation="vertical"
          android:paddingLeft="16dp"
          android:paddingRight="16dp"
          >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="价格"
              android:textColor="#2D2E39"
              android:textSize="16sp"
              />

          <EditText
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@null"
              android:hint="¥0.00"
              android:maxLines="1"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:singleLine="true"
              android:textColor="#2D2E39"
              android:textColorHint="#A0A9BB"
              android:textSize="16sp"
              />

          <View
              android:layout_width="0.5dp"
              android:layout_height="32dp"
              android:layout_marginRight="16dp"
              android:background="#ECECEC"
              />


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="佣金"
              android:textColor="#2D2E39"
              android:textSize="16sp"
              />

          <EditText
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@null"
              android:hint="¥0.00"
              android:maxLines="1"
              android:paddingLeft="16dp"
              android:singleLine="true"
              android:textColor="#2D2E39"
              android:textColorHint="#A0A9BB"
              android:textSize="16sp"
              />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="邮费"
              android:textColor="#2D2E39"
              android:textSize="16sp"
              />

          <EditText
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@null"
              android:hint="¥0.00"
              android:maxLines="1"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:singleLine="true"
              android:textColor="#2D2E39"
              android:textColorHint="#A0A9BB"
              android:textSize="16sp"
              />


          <LinearLayout
              android:paddingLeft="12dp"
              android:gravity="center_vertical"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:id="@+id/check_free_mail_btn"
              >

            <com.yu.common.ui.DelayClickImageView
                android:id="@+id/check_free_mail"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginLeft="6dp"
                android:src="@drawable/shape_check_selector"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="包邮"
                android:textColor="#ffa0a9bb"
                android:textSize="14sp"
                />

          </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            >
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="邮费"
              android:textColor="#2D2E39"
              android:textSize="16sp"
              />
          <com.yu.common.ui.DelayClickImageView
              android:layout_width="12dp"
              android:layout_height="10dp"
              android:src="@drawable/arrow_right"
              />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            >
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="交易方式"
              android:textColor="#2D2E39"
              android:textSize="16sp"
              />
          <com.yu.common.ui.DelayClickTextView
              android:id="@+id/since_the_lift"
              android:layout_width="64dp"
              android:layout_height="24dp"
              android:layout_marginRight="8dp"
              android:background="@drawable/shape_goods_button_selector"
              android:gravity="center"
              android:text="自提"
              android:textColor="@color/home_tab_text_coloor"
              android:textSize="13sp"
              />

          <com.yu.common.ui.DelayClickTextView
              android:id="@+id/door_to_door_delivery"
              android:layout_width="64dp"
              android:layout_height="24dp"
              android:layout_marginRight="8dp"
              android:background="@drawable/shape_goods_button_selector"
              android:gravity="center"
              android:text="送货上门"
              android:textColor="@color/home_tab_text_coloor"
              android:textSize="13sp"
              />

          <com.yu.common.ui.DelayClickTextView
              android:id="@+id/mail"
              android:layout_width="64dp"
              android:layout_height="24dp"
              android:background="@drawable/shape_goods_button_selector"
              android:gravity="center"
              android:text="邮寄"
              android:textColor="@color/home_tab_text_coloor"
              android:textSize="13sp"
              />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="自定义标签"
              android:textColor="#2D2E39"
              android:textSize="16sp"
              />

          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:background="@null"
              android:gravity="right"
              android:hint="用”/“区分如 “小/中/大”"
              android:maxLines="1"
              android:singleLine="true"
              android:textColor="#2D2E39"
              android:textColorHint="#A0A9BB"
              android:textSize="16sp"
              />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="自定义标签"
              android:textColor="#2D2E39"
              android:textSize="16sp"
              />

          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:background="@null"
              android:gravity="right"
              android:hint="用”/“区分如 “小/中/大”"
              android:maxLines="1"
              android:singleLine="true"
              android:textColor="#2D2E39"
              android:textColorHint="#A0A9BB"
              android:textSize="16sp"
              />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"
            />
      </LinearLayout>


    </LinearLayout>
  </ScrollView>

  <View
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      />
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/lb_cm_white"
      >

    <com.yu.common.ui.DelayClickTextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/shape_login_text"
        android:gravity="center"
        android:text="确认发布"
        android:textColor="@color/lb_cm_white"
        android:textSize="16sp"
        />

  </FrameLayout>


</LinearLayout>
