<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="50dp"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/ic_mini_store_top_bg"
                android:orientation="vertical"
                android:paddingTop="@dimen/action_bar_all_height"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >


                    <com.yu.common.ui.CircleImageView
                        android:id="@+id/iv_shop"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_launcher_background"
                        app:civ_border_color="@color/lb_cm_white"
                        app:civ_border_width="2dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/tv_shopName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="XXXX的小铺"
                            android:textColor="@color/lb_cm_white"
                            android:textSize="18sp"
                            />


                        <TextView
                            android:id="@+id/tv_shop_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="7dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="XXXX市XX路"
                            android:textColor="#DEFFFFFF"
                            android:textSize="12sp"
                            />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/describes_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="24dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <EditText
                        android:id="@+id/describes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="9dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:enabled="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="满XXX减XXXX满XXX减XXXX满XXX减XXXX满XXX……"
                        android:textColor="@color/lb_cm_white"
                        android:textSize="12sp"
                        />


                    <com.yu.common.ui.DelayClickTextView
                        android:id="@+id/edit"
                        android:layout_width="36dp"
                        android:layout_height="18dp"
                        android:background="@drawable/shape_home_edit_bg"
                        android:gravity="center"
                        android:text="编辑"
                        android:textColor="@color/lb_cm_white"
                        android:textSize="12sp"
                        />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-53dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape_white_radius_8"
                android:gravity="center"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/tv_describes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="2"
                    android:text="满XXX减XXXX满XXX减XXXX满XXX减XXXX满XXX满XXX减XXXX满XXX减XXXX满XXX减XXXX满XXX……"
                    android:textColor="#ff3c3d5a"
                    android:textSize="14sp"
                    />

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_product"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:nestedScrollingEnabled="false"
                        android:scrollbars="none"
                        android:visibility="visible"/>
                </RelativeLayout>

                <include layout="@layout/layout_empty"/>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_msg"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="联系店家"
                android:textColor="#ff3b3e5a"
                android:textSize="14sp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="88dp"
                android:layout_height="34dp"
                android:background="@drawable/shape_comment"
                android:gravity="center"
                android:text="+ 关注"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_classify"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="商品分类"
                android:textColor="#ff3b3e5a"
                android:textSize="14sp"
                />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
