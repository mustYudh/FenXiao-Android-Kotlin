<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#52000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:background="@drawable/shape_gray_radius_8_top"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_centerInParent="true"
            android:text="修改价格"
            android:textColor="#ff2d2e39"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageView
           android:layout_alignParentRight="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="#ff2d2e39"
                android:textSize="16sp"
                />

            <EditText
                android:layout_marginRight="16dp"
                android:inputType="numberDecimal"
                android:layout_marginLeft="16dp"
                android:hint="¥0.00"
                android:textColor="#ff3b3e5a"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_marginHorizontal="16dp"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮费"
                android:textColor="#ff2d2e39"
                android:textSize="16sp"
                />

            <EditText
                android:inputType="numberDecimal"
                android:textColor="#ff3b3e5a"
                android:layout_marginLeft="16dp"
                android:hint="¥0.00"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            
            <LinearLayout
                android:gravity="center"
                android:layout_width="28dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/shape_check_selector"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

            </LinearLayout>

            <TextView
                android:layout_marginRight="16dp"
                android:layout_width="28dp"
                android:layout_height="20dp"
                android:text="包邮"
                android:textColor="#ffa0a9bb"
                android:textSize="14sp"
                />
        </LinearLayout>

        <View
            android:layout_marginHorizontal="16dp"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <TextView
            android:gravity="center"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="24dp"
            android:text="确认修改"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:background="@drawable/confirm_change"
            android:layout_marginHorizontal="32dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>


</LinearLayout>