<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="60dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="12dp"
                android:paddingRight="16dp"
                android:paddingBottom="12dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="蚕丝被「一等奖」"
                    android:textColor="#ff2d2e39"
                    android:textSize="17sp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:text="5月13日 6:00自动开奖"
                        android:textColor="#ffa0a9bb"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:includeFontPadding="false"
                        android:text="奖品数量：1"
                        android:textColor="#ffa0a9bb"
                        android:textSize="12sp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_award_personal"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="参与用户"
                        android:textColor="#ff3b3e5a"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:includeFontPadding="false"
                        android:text="截止当前共30人"
                        android:textColor="#ffa0a9bb"
                        android:textSize="11sp"
                        />
                </RelativeLayout>

                <com.yu.common.ui.NoSlidingGridView
                    android:id="@+id/gv_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="5"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:includeFontPadding="false"
                android:text="奖品赞助方"
                android:textColor="#ff2d2e39"
                android:textSize="14sp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/shape_award_store"
                android:gravity="center_vertical">

                <com.yu.common.ui.CircleImageView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/ic_launcher"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:text="XXX小店"
                    android:textColor="#ff3b3e5a"
                    android:textSize="14sp"
                    />

                <TextView
                    android:layout_width="78dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/shape_award_go"
                    android:gravity="center"
                    android:text="前去看看"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="16dp"
                android:includeFontPadding="false"
                android:text="XXXXXX内容XXXXX内容"
                android:textColor="#ffa0a9bb"
                android:textSize="13sp"
                />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:gravity="center">


        <TextView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_button_empty_4"
            android:gravity="center"
            android:text="参与抽奖"
            android:textColor="#ffff284d"
            android:textSize="14sp"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/shape_comment"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="最高可得¥300"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:includeFontPadding="false"
                android:text="分享赚¥3.00"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
