<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F3F5F8"/>


    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:includeFontPadding="false"
            android:text="头像"
            android:textColor="#ff3c3e5b"
            android:textSize="13sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <com.yu.common.ui.CircleImageView
                android:id="@+id/iv_img"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_arrow_right"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#F7F7F7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:includeFontPadding="false"
            android:text="小店名称"
            android:textColor="#ff3c3e5b"
            android:textSize="13sp"
            />


        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:hint="请填写小店名称"
            android:textColor="#ff9ea9bc"
            android:textColorHint="#ff9ea9bc"
            android:textSize="13sp"
            tools:ignore="RtlHardcoded"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#F3F5F8"/>

    <EditText
        android:id="@+id/et_describes"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:background="#F3F5F8"
        android:gravity="top"
        android:hint="请填写小店描述"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:textColor="#ff9ea9bc"
        android:textColorHint="#ff9ea9bc"
        android:textSize="13sp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.yu.common.ui.DelayClickTextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_login_text"
        android:gravity="center"
        android:text="保存"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        />

</LinearLayout>
