<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#52000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:paddingLeft="24dp"
        android:gravity="center_vertical"
        android:background="#F7F7F7"
        android:text="分类至（按分类展示商品、方便买家筛选）"
        android:textColor="#ffa0a9bb"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="117dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="13dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="17dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/shape_check_selector"
                android:layout_width="14dp"
                android:layout_height="14dp" />
        </LinearLayout>

        <TextView
            android:layout_marginLeft="38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1"
            android:textColor="#ff3c3d5a"
            android:textSize="14sp"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0件商品"
            android:textColor="#ffa0a9bb"
            android:textSize="14sp"
            />

        <View
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="44dp"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <View
            android:layout_marginTop="60dp"
            android:background="@color/line_color"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_marginBottom="8dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:background="@drawable/shape_gray_4radius_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="取消"
                android:textColor="#ffffffff"
                android:textSize="14sp"/>

            <TextView
                android:gravity="center"
                android:layout_marginLeft="11dp"
                android:background="@drawable/shape_add_goods_bg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="14sp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>